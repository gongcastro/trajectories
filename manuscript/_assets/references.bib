	url = {https://www.cambridge.org/core/journals/bilingualism-language-and-cognition/article/minimal-pair-word-learning-by-bilingual-toddlers-the-catalan-e-contrast-revisited/2A2571D4A2B49689CE101C3E5E3F973A},
